{
  "manifest_version": 3,
  "name": "Twitterスパム自動ブロック",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["https://twitter.com/*"],
  "background": {
    "service_worker": "src/entry/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/entry/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
